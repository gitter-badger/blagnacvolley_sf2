{% extends 'FrontBundle::layout.html.twig' %}

{% form_theme form _self %}

{% block title %}Contact{% endblock%}

{% block head_style %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block head_script %}
    {{ parent() }}
    {{ form_javascript(form) }}
    <script src="//www.google.com/recaptcha/api.js"></script>
{% endblock %}

{% block content_row %}
    <form action="{{ path('contactPost')}}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        {{ form_widget(form._token) }}

        <div id="contact">
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="input-group center-block" style="width:304px;">
                        <div class="g-recaptcha" data-sitekey="{{ public_key }}"></div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12">
                <div class="form-group">
                    {{ form_label(form.message, null, {'label_attr': {'class': 'col-sm-1'}}) }}
                    <div class="col-sm-11">
                        {{ form_widget(form.message) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        {{ form_errors(form.message) }}
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-11">
                        {{ form_widget(form.save) }}
                    </div>
                </div>
            </div>
        </div>

    </form>

{% endblock %}
