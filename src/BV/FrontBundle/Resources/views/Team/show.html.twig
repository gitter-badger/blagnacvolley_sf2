{% extends 'FrontBundle::layout.html.twig' %}

{% block content_row -%}{% set level = "constants.user.level." ~ entity.level %}
    <h1>{{ 'team.show.h1'|trans({'%team_name%': entity.name}) }}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{ 'team.show.level'|trans() }}</th>
                <td>{{ level|trans }}</td>
            </tr>
            <tr>
                <th>{{ 'team.show.name'|trans() }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'team.show.type'|trans() }}</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>{{ 'team.show.slot'|trans() }}</th>
                <td>{{ entity.slot }}</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">
                    <a href="{{ path('teams') }}" class="btn btn-default">
                        {{ 'team.show.list'|trans() }}
                    </a>
                </th>
            </tr>
        </tfoot>
    </table>

{% endblock %}
