{% extends 'FrontBundle::layout.html.twig' %}

{% block content_row -%}
    <h1>Team list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Level</th>
                <th>Name</th>
                <th>Type</th>
                <th>Slot</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.slot }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('team_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
